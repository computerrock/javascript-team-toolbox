# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# General
[*]
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120

# JavaScript
[*.{js,jsx,mjs}]
indent_style = space
indent_size = 4

# CSS/Sass/SCSS
[*.{css,scss}]
indent_style = space
indent_size = 4
